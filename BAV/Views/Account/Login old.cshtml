@{
    Layout = null;
    var returnUrl = Context.Request.Query["ReturnUrl"];
}
@model SharedObjects.ViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="~/image/png" href="images/icons/favicon.ico" />

    <!--===============================================================================================-->

    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/util.css" rel="stylesheet" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">

                <form asp-action="Login" asp-controller="Account" asp-route-returnurl="@returnUrl" method="post" class="login100-form validate-form flex-sb flex-w">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <span class="login100-form-title p-b-51">
                        PUC Login
                    </span>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="NTLogin is required">
                        <input asp-for="NTLogin" id="login" class="input100" type="text" name="NTLogin" placeholder="NTLogin">
                        <span asp-validation-for="NTLogin" class="text-danger focus-input100"></span>
                    </div>


                    <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                        <input asp-for="Password" id="password" class="input100" type="password" name="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>



    <script src="~/assets/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/assets/global/plugins/jquery.min.js"></script>
    <script src="~/js/jquery-validation/jquery.validate.min.js"></script>


    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

</body>
</html>